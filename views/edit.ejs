<%- include ('partials/header') %>
<div class="">
  <h1>ADD PRODUCT DETAILS</h1>

  <form class="container reg-form" action="/product/<%= product._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        value="<%= product.name %>"
        name="product[name]"
      />
    </div>

    <div class="form-group">
      <input
        class="form-control"
        type="number"
        value="<%= product.price %>"
        name="product[price]"
      />
    </div>

    <div class="form-group">
      <input
        class="form-control"
        type="text"
        value="<%= product.image %>"
        name="product[image]"
      />
    </div>

    <div class="form-group">
      <select class="form-control" name="product[type]">
        <option value="electric">Electronics</option>
        <option value="home">Home Item</option>
        <option value="vehicle">Vehicle</option>
      </select>
    </div>

    <div class="form-group">
      <textarea 
        class="form-control" 
        name="product[descp]"><%= product.descp %>
      </textarea>  
    </div>

    <button type="submit" class="form-control btn btn-primary">Submit</button>
  </form>
</div>
<%- include ('partials/footer') %>
